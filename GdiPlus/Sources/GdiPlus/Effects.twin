        End Property

        Property Set saturationLevel(ByVal level&)
            Me.saturation = level
        End Property
        
        Property Get lightnessLevel&()
            Return Me.lightness
        End Property
        
        Property Set lightnessLevel(ByVal level&)
            Me.lightness = level
        End Property
    End Type
    
    Type TintParams
