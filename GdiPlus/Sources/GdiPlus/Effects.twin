Module EffectsModule
    Type GpEffect
        Native As LongPtr
    End Type
        
    Function GpEffect() As GpEffect
        GpEffect.Native = 0
    End Function

    Type SharpenParams
        radius!
        amount!
    End Type
    
    Function SharpenParams(ByVal radius!, ByVal amount!) As SharpenParams
        SharpenParams.radius = radius
        SharpenParams.amount = amount
    End Function
    
    Type BlurParams
        radius!
        expandEdge As BOOL
    End Type
    
    Function BlurParams(ByVal radius!, ByVal expandEdge As Boolean) As BlurParams
        BlurParams.radius = radius
        BlurParams.expandEdge = expandEdge
    End Function
    
    Type BrightnessContrastParams
        brightness&
        contrast&
        
        ' For compatibility with MS API, these names are too verbose otherwise
        Property Get brightnessLevel&()
            Return Me.brightness
        End Property
        
        Property Let brightnessLevel(ByVal level&)
            Me.brightness = level
        End Property
                
        Property Get contrastLevel&()
            Return Me.contrast&
        End Property

        Property Let contrastLevel(ByVal level&)
            Me.contrast = level
        End Property
    End Type
    
    Function BrightnessContrastParams(ByVal brightness&, ByVal contrast&) As BrightnessContrastParams
        BrightnessContrastParams.brightness = brightness&
        BrightnessContrastParams.contrast = contrast&
    End Function
    
    Type RedEyeCorrectionParams
        numberOfAreas As UINT
        areas As LongPtr ' Pointer to RECT
    
        Sub Free()
            GdipFree(Me.areas)
            Me.numberOfAreas = 0
            Me.areas = 0
        End Sub
        
        Function Allocate(ByVal newCount&) As GpStatus
            Return AllocateArrayInUDT(newCount, LenB(Of RECT), Me.areas, Me.numberOfAreas)
        End Function
        
        Property Get Area(ByVal index&) As RECT
            Dim src As LongPtr = Me.areas + (index - 1) * LenB(Of RECT)
            If index >= Me.numberOfAreas Then Err.Raise ERROR_INVALID_PARAMETER
            CopyMemory(Area, ByVal src, LenB(Of RECT))
        End Property
        
        Property Set Area(ByVal index&, value As RECT)
            Dim dst As LongPtr = Me.areas + (index - 1) * LenB(Of RECT)
            If index >= Me.numberOfAreas Then Err.Raise ERROR_INVALID_PARAMETER
            CopyMemory(ByVal dst, value, LenB(Of RECT))
        End Property
        
        [Description("Returns a view into the areas array." & vbCrLf & _
                "The view is valid only as long as the RedEyeCorrectionParams exists.")]
        Function GetAreas() As RECT()
            Return GetStaticTrailingSA(Of RECT)(Me.areas, Me.numberOfAreas)
        End Function
    End Type
    
    Function RedEyeCorrectionParams(areas() As GpRect) As RedEyeCorrectionParams
        Dim count& = Len(areas)
        If count > 0 Then
            RedEyeCorrectionParams.Allocate(count)
            Dim dst As LongPtr = RedEyeCorrectionParams.areas
            For i As Long = LBound(areas) To UBound(areas)
                SetRECT(ByVal dst, areas(i))
                dst += LenB(Of RECT)
            Next
        End If
        RedEyeCorrectionParams.numberOfAreas = count
    End Function

    Private Sub SetGpRect(dst As GpRect, src As RECT)
        dst.X = src.Left
        dst.Y = src.Top
        dst.Width = src.Right - src.Left
        dst.Height = src.Bottom - src.Top
    End Sub
    
    Private Sub SetRECT(dst As RECT, src As GpRect)
        dst.Left = src.X
        dst.Top = src.Y
        dst.Right = src.X + src.Width
        dst.Bottom = src.Y + src.Height
    End Sub
    
    Type HueSaturationLightnessParams
        hue&
        saturation&
        lightness&
        
        ' For compatibility with MS API, these names are too verbose otherwise
        Property Get hueLevel&()
            Return Me.hue
        End Property
        
        Property Set hueLevel(ByVal level&)
