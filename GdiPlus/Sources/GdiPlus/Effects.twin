[COMCreatable(False)]
Class Effect
    Inherits GdiPlusBase
    Protected fx As GpEffect
    Protected PropAuxDataSize&
    Protected PropAuxData As LongPtr
    Protected PropUseAuxData As Boolean
    
    Sub New()
        fx.Native = Null
        PropAuxDataSize = 0
        PropAuxData = Null
        PropUseAuxData = False
    End Sub
    
    Sub Class_Terminate()
        ' pvData Is allocated by ApplyEffect. Return the pointer so that
        ' it can be freed by the appropriate memory manager.
        GdipFree(PropAuxData)
        
        ' Release the native Effect.
        GdipDeleteEffect(fx)
    End Sub
    
    Property Get AuxDataSize&()
        Return PropAuxDataSize
    End Property
        
    Property Get AuxData() As LongPtr
        Return PropAuxData
    End Property
    
    Sub SetAuxData(ByVal auxData As LongPtr, ByVal auxDataSize&)
        If PropAuxData <> 0 Then GdipFree(auxData)
        PropAuxData = auxData
        PropAuxDataSize = auxDataSize&
    End Sub
    
    Property Get UseAuxData() As Boolean
        Return PropUseAuxData
    End Property
    
    Property Let UseAuxData(ByVal useAuxDataFlag As Boolean)
        PropUseAuxData = useAuxDataFlag
    End Property
    
    Property Get ParameterSize() As UINT
        Return SetStatus(GdipGetEffectParameterSize(fx, ParameterSize))
    End Property
    
    Protected Property Get Native() As GpEffect
        Return fx
    End Property
        
    Protected Sub New(ByVal nativeEffect As GpEffect)
        SetNativeEffect(nativeEffect)
    End Sub
    
    Protected Sub SetNativeEffect(ByVal nativeEffect As GpEffect)
        fx = nativeEffect
    End Sub
End Class

