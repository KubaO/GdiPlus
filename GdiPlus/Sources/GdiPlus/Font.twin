Module FontModule
    Type GpFont
        Native As LongPtr
    End Type
    
    Function GpFont() As GpFont
        GpFont.Native = 0
    End Function
End Module

Class Font
    Dim fo As GpFont
    
    Public Property Get Native() As GpFont
        Return fo
    End Property
    
    Public Static Function GetNative(font As Font) As GpFont
        If font IsNot Nothing Then GetNative = font.Native
    End Function
End Class
